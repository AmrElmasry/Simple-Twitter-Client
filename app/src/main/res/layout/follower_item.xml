<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/follower_item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/follower_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/follower_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/follower_full_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/follower_screen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6D6F7A"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/follower_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>